<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/OverviewFragment">

    <fragment
        android:id="@+id/OverviewFragment"
        android:name="at.maximilian.memosyne.OverviewFragment"
        android:label="@string/overview_fragment_label"
        tools:layout="@layout/fragment_overview">

        <action
            android:id="@+id/action_OverviewFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_OverviewFragment_to_AddMemoFragment"
            app:destination="@id/AddMemoFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="at.maximilian.memosyne.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/OverviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/AddMemoFragment"
        android:name="at.maximilian.memosyne.AddMemoFragment"
        android:label="fragment_add_memo"
        tools:layout="@layout/fragment_add_memo" />
</navigation>